<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OsirisNFT" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/yellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="drawableButton">
        <item name="android:buttonTint">@animator/button_tint_dark</item>
    </style>

    <style name="background">
        <item name="backgroundTint">@color/default_grey</item>
    </style>

    <style name="cardBack">
        <item name="cardBackgroundColor">@color/dark_grey</item>
    </style>

    <style name="linearLayoutBack">
        <item name="android:background">@color/default_grey</item>
    </style>

    <style name="navBarBack">
        <item name="android:background">@color/black</item>
    </style>

    <style name="toggleButtonBack">
        <item name="android:background">@drawable/toggle_selector_dark</item>
    </style>

    <style name="yellowButton">
        <item name="backgroundTint">@color/yellow</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>
</resources>